<%= form_with model: [:public, @user] do |f| %>
  <div class="container text-center col-8">

    <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="actions">
    <%= f.submit "変更する" %>
    </div>

  </div>
<% end %>